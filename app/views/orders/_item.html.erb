<% if product = Product.find_by(id: line) %>
  <% @cart_total += product.price * line.quantity %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= line.quantity %>
    </td>
    <td>
      <%= product.price * line.quantity %>
    </td>
  </tr>
<% end %>
